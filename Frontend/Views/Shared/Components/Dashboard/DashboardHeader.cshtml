@{
    var userName = Context.Session.GetString("UserName") ?? "User";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5 fw-bold">Welcome, @userName</h1>
        <p class="text-muted">Track your fitness journey and manage your membership</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="fas fa-home me-2"></i>Home
        </a>
        <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </div>
</div> 