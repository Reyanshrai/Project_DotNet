@{
    // In a real application, these values would come from the backend
    var currentWeight = 75.5;
    var startingWeight = 80.0;
    var goalWeight = 70.0;
    var weightLost = startingWeight - currentWeight;
    var progress = (startingWeight - currentWeight) / (startingWeight - goalWeight) * 100;
}

<div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-4">Weight Tracking</h3>
    
    <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="text-center">
            <p class="text-sm text-gray-500">Starting</p>
            <p class="text-xl font-bold text-gray-800">@startingWeight kg</p>
        </div>
        <div class="text-center">
            <p class="text-sm text-gray-500">Current</p>
            <p class="text-xl font-bold text-blue-600">@currentWeight kg</p>
        </div>
        <div class="text-center">
            <p class="text-sm text-gray-500">Goal</p>
            <p class="text-xl font-bold text-gray-800">@goalWeight kg</p>
        </div>
    </div>
    
    <div class="mb-4">
        <div class="flex justify-between mb-1">
            <span class="text-sm text-gray-700">@weightLost.ToString("F1") kg lost</span>
            <span class="text-sm text-gray-700">@Math.Round(progress)% to goal</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full" style="width: @Math.Min(100, Math.Round(progress))%"></div>
        </div>
    </div>
    
    <form asp-controller="User" asp-action="UpdateWeight" method="post" class="mt-4">
        <div class="flex items-end gap-2">
            <div class="flex-grow">
                <label for="newWeight" class="block text-sm font-medium text-gray-700 mb-1">Update Weight</label>
                <input type="number" id="newWeight" name="newWeight" step="0.1" min="30" max="200"
                       value="@currentWeight" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                Update
            </button>
        </div>
    </form>
</div> 