@{
    // In a real application, these values would come from the backend
    var workoutName = "Full Body HIIT";
    var duration = 45;
    var exercises = new List<(string name, int sets, int reps)>
    {
        ("Push-ups", 3, 15),
        ("Squats", 4, 20),
        ("Burpees", 3, 10),
        ("Planks", 3, 30),
        ("Lunges", 3, 12)
    };
}

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-start mb-4">
        <div>
            <h3 class="text-xl font-bold text-gray-800">Today's Workout</h3>
            <p class="text-gray-600">@workoutName - @duration minutes</p>
        </div>
        <div class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
            Scheduled
        </div>
    </div>
    
    <div class="space-y-4">
        @foreach (var exercise in exercises)
        {
            <div class="flex items-center justify-between border-b border-gray-100 pb-2">
                <div>
                    <p class="font-medium text-gray-800">@exercise.name</p>
                    <p class="text-sm text-gray-500">@exercise.sets sets × @exercise.reps reps</p>
                </div>
                <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
                    <i class="fas fa-check text-gray-400"></i>
                </div>
            </div>
        }
    </div>
    
    <a href="#" class="mt-4 inline-block text-blue-600 hover:text-blue-800 font-medium">
        View full workout details →
    </a>
</div> 