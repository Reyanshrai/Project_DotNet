@model Frontend.Models.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1 d-flex align-items-center justify-content-center bg-light pt-5" style="
        background: url('/images/registerbg.png') center center / cover no-repeat;
    ">
        <div class="shadow-lg rounded p-4 bg-white" style="max-width: 400px; width: 100%;">
            <h2 class="text-center text-dark mb-3">Admin Login</h2>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger text-center">@ViewData["ErrorMessage"]</div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>

            <form method="post" asp-action="Login" asp-controller="Admin">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter admin email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Home")" class="text-primary text-decoration-none">Back to Home</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 