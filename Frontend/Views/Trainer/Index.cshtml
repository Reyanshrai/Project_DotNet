@model List<Frontend.Models.TrainerViewModel>

@{
    ViewData["Title"] = "Our Trainers";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold">#05 Trainers</h2>
        <p class="text-secondary fs-5">
            We take pride in our superior <span class="text-danger">#Trainers</span>
        </p>
    </div>

    <div class="row g-4">
        @foreach (var trainer in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card shadow-lg border-0 rounded-3 overflow-hidden h-100 d-flex flex-column">
                    <div class="position-relative">
                        <img src="@trainer.Image" class="card-img-top img-fluid w-100" alt="@trainer.Title" style="height: 250px; object-fit: cover;">
                        <div class="position-absolute top-0 end-0 bg-white px-3 py-1 m-2 rounded shadow-sm">
                            <span class="fw-bold text-secondary">@trainer.Experience</span>
                        </div>
                    </div>
                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@trainer.Title</h5>
                        <p class="text-muted">@trainer.Caption</p>
                        <p class="text-muted small flex-grow-1">@trainer.Description</p>

                        <!-- Star Rating -->
                        <div class="mt-2">
                            @{
                                var fullStars = (int)Math.Floor(trainer.Rating);
                                var halfStar = trainer.Rating % 1 != 0;
                                var emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
                            }

                            @for (var i = 0; i < fullStars; i++)
                            {
                                <i class="bi bi-star-fill text-warning fs-5"></i>
                            }
                            @if (halfStar)
                            {
                                <i class="bi bi-star-half text-warning fs-5"></i>
                            }
                            @for (var i = 0; i < emptyStars; i++)
                            {
                                <i class="bi bi-star text-secondary fs-5"></i>
                            }
                        </div>

                        <!-- Social Media Links -->
                        <div class="mt-3 d-flex justify-content-center gap-2">
                            <a href="@trainer.SocialLinks["LinkedIn"]" target="_blank" class="btn btn-primary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-linkedin fs-5 text-white"></i>
                            </a>
                            <a href="@trainer.SocialLinks["Instagram"]" target="_blank" class="btn btn-danger rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-instagram fs-5 text-white"></i>
                            </a>
                            <a href="@trainer.SocialLinks["Facebook"]" target="_blank" class="btn btn-primary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-facebook fs-5 text-white"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
