@model Frontend.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="w-100 p-4">
        <div class="row g-4">
            <!-- Latest News Section -->
            <div class="col-md-6">
                <h2 class="fw-bold mb-4">Latest News</h2>
                <div class="list-group">
                    @{
                        var newsList = new[]
                        {
                                        new { Date = "22 OCT", Title = "7 Precious tips to help you get better at GYM", Comments = 28 },
                                        new { Date = "09 SEP", Title = "You'll never thought that knowing GYM could be so beneficial",
                                        Comments = 12 },
                                        new { Date = "18 AUG", Title = "What's so trendy about GYM that everyone went crazy over it?",
                                        Comments = 78 }
                                        };
                    }
                    @foreach (var news in newsList)
                    {
                        <div class="d-flex align-items-center border-bottom pb-3">
                            <div class="text-center bg-danger text-white rounded p-3 me-3" style="width: 4rem;">
                                <span class="fw-bold fs-5 d-block">@news.Date.Split(' ')[0]</span>
                                <span class="fs-6">@news.Date.Split(' ')[1]</span>
                            </div>
                            <div>
                                <h5 class="fw-semibold mb-1">@news.Title</h5>
                                <p class="text-muted small">By Admin Â· @news.Comments Comments</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Contact Section -->
            <div class="col-md-6">
                <h2 class="fw-bold mb-4">Quick Contact</h2>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="col-md-6">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Your Email" required>
                        </div>
                        <div class="col-md-6">
                            <input type="text" asp-for="Subject" class="form-control" placeholder="Your Subject"
                                required>
                        </div>
                        <div class="col-md-6">
                            <input type="text" asp-for="ContactNumber" class="form-control"
                                placeholder="Contact Number">
                        </div>
                        <div class="col-12">
                            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Message"
                                required></textarea>
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Type the below word">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-danger w-100 fw-bold py-2">SEND MESSAGE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
