@{
    ViewData["Title"] = "User Login";
}

<div class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1 d-flex align-items-center justify-content-center bg-light pt-5" style="
        background: url('/images/registerbg.png') center center / cover no-repeat;
    ">
        <div class="shadow-lg rounded p-4 bg-white" style="max-width: 400px; width: 100%;">
            <h2 class="text-center text-dark mb-3">Login Form</h2>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger text-center">@ViewData["ErrorMessage"]</div>
            }

            <form method="post" asp-action="Login" asp-controller="Auth">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="Email" class="form-control" placeholder="Enter email address" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="Password" class="form-control" placeholder="Enter password" required />
                    <a href="@Url.Action("ForgotPassword", "Auth")" class="d-block mt-2 text-primary text-decoration-none">Forgot Password?</a>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
                <div class="text-center">
                    <p class="text-dark">Donâ€™t have an account? <a href="@Url.Action("Register", "Auth")" class="text-primary text-decoration-none">Go To Sign Up</a></p>
                </div>
            </form>
        </div>
    </div>
</div>
