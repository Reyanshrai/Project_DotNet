@model string
@{
    ViewBag.Title = "Forgot Password";
}

<div class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1 d-flex align-items-center justify-content-center bg-light" 
         style="background: url('/images/registerbg.png') center center / cover no-repeat;">
        <div class="shadow-lg rounded p-4 w-50 bg-white" style="backdrop-filter: blur(10px); max-width: 500px;">
            <h2 class="text-center mb-4">Forgot Password</h2>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Message"]</div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>

            <form method="post" asp-action="ForgotPassword" asp-controller="Auth">
                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter email address" 
                           class="form-control" required />
                </div>

                <!-- Submit Button -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>

                <div class="text-center">
                    <p>Remembered your password? 
                        <a href="@Url.Action("Login", "Auth")" class="text-primary text-decoration-none">Go To Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
